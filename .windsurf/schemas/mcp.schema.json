{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Configuration Schema",
  "description": "Schema for MCP configuration files",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the MCP configuration"
    },
    "resources": {
      "type": "array",
      "description": "List of MCP resources",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the resource"
          },
          "type": {
            "type": "string",
            "description": "Type of the resource"
          },
          "uri": {
            "type": "string",
            "description": "URI of the resource"
          }
        },
        "required": ["name", "type", "uri"]
      }
    }
  },
  "required": ["version", "resources"]
}
